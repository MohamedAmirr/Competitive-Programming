//remember data type long long or int
    while (T--) {
        int n;
        cin >> n;
        vector<type> v(n);
        for (int i = 0; i < n; ++i) {
            cin >> v[i].x >> v[i].y;
        }
        int mn = LOO;
        for (int i = 0; i < n - 2; ++i) {
            mn = min(mn, hoba(i, i + 1, i + 2, v));
        }
        mn = min(mn, hoba(n - 2, n - 1, 0, v));
        mn = min(mn, hoba(n - 1, 0, 1, v));
        cout << mn << endl;

    }
//remember data type long long or int

}
